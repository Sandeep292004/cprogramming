#include <stdio.h>
main()
{
	float a=0,b=0,c=0,d=0,e=0,f;
	f=-1;
	printf("Enter -1 to Exit\n");
	printf("Enter The Number:");
	scanf("%f",&a);
	while(a!=f)
	{
		if(a>=0)
		{
			b+=a;
			d+=1;
		}
		else if(a<0)
		{
			c+=a;
			e+=1;
		}
		printf("Enter The Number:");
		scanf("%f",&a);	
	}
	printf("The Average of Positive Numbers is %f\n",b/d);
	printf("The Average of Negative Numbers is %f",c/e);
}
